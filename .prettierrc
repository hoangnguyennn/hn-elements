{
  "plugins": ["prettier-plugin-organize-imports", "prettier-plugin-jsdoc"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "options": {
        "jsdocSeparateReturnsFromParams": true,
        "jsdocSeparateTagGroups": true,
        "jsdocDescriptionWithDot": true
      }
    }
  ],
  "singleQuote": true,
  "useTabs": false,
  "tabWidth": 2,
  "arrowParens": "avoid",
  "trailingComma": "none",
  "semi": false,
  "endOfLine": "lf"
}
