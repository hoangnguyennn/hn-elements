{
  "name": "hn-elements",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "homepage": "https://hoangnguyennn.github.io/hn-elements",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview",
    "prepare": "husky",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "vue-tsc --noEmit --skipLibCheck --project tsconfig.app.json",
    "verify": "pnpm run lint && pnpm run typecheck && pnpm run test",
    "storybook": "storybook dev -p 6006 --docs",
    "build-storybook": "storybook build --docs",
    "clean": "rm -rf storybook-static",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:headed": "playwright test --headed",
    "e2e:ci": "playwright test --reporter=line,github"
  },
  "dependencies": {
    "@floating-ui/vue": "1.1.7",
    "dayjs": "1.11.13",
    "lodash.debounce": "4.0.8",
    "vue": "3.5.18"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "3.2.7",
    "@eslint/js": "9.31.0",
    "@playwright/test": "1.54.1",
    "@storybook/addon-a11y": "8.6.14",
    "@storybook/addon-essentials": "8.6.14",
    "@storybook/blocks": "8.6.14",
    "@storybook/experimental-addon-test": "8.6.14",
    "@storybook/test": "8.6.14",
    "@storybook/test-runner": "0.23.0",
    "@storybook/vue3": "8.6.14",
    "@storybook/vue3-vite": "8.6.14",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/user-event": "14.6.1",
    "@testing-library/vue": "8.1.0",
    "@types/lodash.debounce": "4.0.9",
    "@types/node": "20.19.0",
    "@vitejs/plugin-vue": "6.0.0",
    "@vitest/browser": "3.2.4",
    "@vitest/coverage-v8": "3.2.4",
    "@vue/test-utils": "2.4.6",
    "concurrently": "9.2.0",
    "eslint": "9.31.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-jsdoc": "51.4.1",
    "eslint-plugin-prettier": "5.5.3",
    "eslint-plugin-storybook": "0.12.0",
    "eslint-plugin-vue": "10.3.0",
    "globals": "16.3.0",
    "http-server": "14.1.1",
    "husky": "9.1.7",
    "jsdom": "26.1.0",
    "lint-staged": "16.1.2",
    "playwright": "1.54.1",
    "prettier": "3.6.2",
    "prettier-plugin-jsdoc": "1.3.3",
    "prettier-plugin-organize-imports": "4.2.0",
    "sass-embedded": "1.89.2",
    "storybook": "8.6.14",
    "typescript": "5.8.3",
    "typescript-eslint": "8.38.0",
    "vite": "6.3.5",
    "vite-svg-loader": "5.1.0",
    "vitest": "3.2.4",
    "vue-tsc": "3.0.4",
    "yargs": "18.0.0"
  },
  "lint-staged": {
    "src/**/*": "prettier --write --ignore-unknown"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
